#include "informes.h"
#include <stdio.h>
#include <stdio_ext.h>
#include <stdlib.h>
#include <string.h>
#define STATUS_EMPTY -1
#define STATUS_PENDIENTE 0
#define STATUS_COMPLETADO 1
#define STATUS_NOT_EMPTY 0



//LISTAR EL CLIENTE CON EL PEDIDO DE MENOS KG TOTALES
//PROMEDIO DE KG POR PEDIDO
//IMPRIMIR EL CLIENTE CON MAS PEDIDOS
//IMPRIMIR EL CLIENTE CON MAS KG ENTRE TODOS LOS PEDIDOS.
//IMPRIMIR EL PROMEDIO DE RESIDUOS PP POR PEDIDO
//LISTAR LOS CLIENTES CON MAS DE 50KG TOTALES X PEDIDO  DE RESIDUOS A RECOGER
//LISTAR LOS CLIENTES POR LOCALIDAD
//LISTAR LOS PEDIDOS CON MAS DE 10KG DEL 1ER RESIDUO, MAS DE 5KG DEL 2DO Y MAS DE 3KG DEL 3RO.
//LISTAR EL CLIENTE CON EL PEDIDO DE MAS KG TOTALES.IMPRIMIR SU CUIT, NOMBRE DE LA EMPRESA Y DIRECCION.



//LISTAR EL CLIENTE CON EL PEDIDO DE MAS KG TOTALES
//AGREGO KG TOTALES A LA ESTRUCTURA AUXILIAR. ME VA A SERVIR PARA PROMEDIO. ES IGUAL Q EL ULTIMO IMPRIMIR

//contador de pedidos ok
//acumulador de kg totales en todos los pedidos por estructura auxiliar ok
//MAXIMO




int listarClienteConMaxKgTotales(sCliente *aCliente,int lenAcliente,sPedidoCliente *aPedido,int lenApedido,sAuxiliarCliente *aAuxCLiente,int lenaAuxCLiente)
{
	int retorno = -1;
	int i;
	int j;
	int flagMaximo;
	int maximoKilosArecolectar;

	if(aCliente!=NULL && aPedido!=NULL && aAuxCLiente!=NULL && lenAcliente>0 && lenApedido>0 && lenaAuxCLiente>0)
	{
		for(i=0;i<lenaAuxCLiente;i++)
		{
			aAuxCLiente[i].status = STATUS_EMPTY;
			aAuxCLiente[i].contadorPedidos = 0;
			aAuxCLiente[i].acumuladorPedidos = 0;
		}
		for(i=0;i<lenAcliente;i++)
		{
			aAuxCLiente[i].idCliente = aCliente[i].idCliente;
			for(j=0;j<lenApedido;j++)
			{
				if(aCliente[i].idCliente == aPedido[j].idCliente)
				{
					aAuxCLiente[i].contadorPedidos++;
					aAuxCLiente[i].acumuladorPedidos+=aPedido[j].kgTotalesArecolectar;
					retorno = 0;
				}
			}
		}
		if(flagMaximo==0||aAuxCLiente[i].acumuladorPedidos>maximoKilosArecolectar)
		{
			maximoKilosArecolectar = aAuxCLiente[i].acumuladorPedidos;
			flagMaximo=1;
		}
		else if(aAuxCLiente[i].acumuladorPedidos==maximoKilosArecolectar)
		{

		}


	}
	return retorno;
}

