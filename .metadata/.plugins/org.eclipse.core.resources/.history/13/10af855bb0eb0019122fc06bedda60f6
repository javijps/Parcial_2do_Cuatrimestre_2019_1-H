#include <stdio.h>
#include <stdlib.h>
#include <stdio.h>
#include <stdio_ext.h>
#include <stdlib.h>
#include <string.h>
#include "utn.h"
#define MAX_CLIENTES 100
#define MAX_PEDIDOS 1000

int main(void) {


	cliente aCliente[MAX_CLIENTES];

	int option;

	initcliente(aCliente,MAX_CLIENTES);
	do
	{

		getInt(&option,"\n---------------------\n"
				"Ingrese:\n"
				"1-Alta de cliente\n"
				"2-\n"
				"3-\n"
				"4-\n"
				"5-\n"
				"6-\n"
				"7-\n"
				"8-\n"
				"9-EXIT\n",
				"Error\n",1,12,2);

		switch(option)
		{
		case 1:
			if(altaCliente())!=0)
			break;

		}

	}while(option!=9);
	return EXIT_SUCCESS;
}
