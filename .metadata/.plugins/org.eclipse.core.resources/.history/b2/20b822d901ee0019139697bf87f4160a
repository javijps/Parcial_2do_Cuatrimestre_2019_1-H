#ifndef CLIENTES_H_
#define CLIENTES_H_

typedef struct{

	int idCliente;
	int statusCliente;
	char empresa[50];
	char cuit[50];
	char direccion[50];
	char localidad[50];

} cliente;

int imprimirClientesActivos(cliente *acliente, int len);
void imprimirUnCliente(cliente aCliente);
int initcliente(cliente *aCliente, int cantidad);
int getDatoscliente(cliente *aCliente,int cantidad);
int buscarclienteLibre(cliente *aCliente,int cantidad);
int altaCliente(cliente *aCliente, int cantidad);
int buscarClientePorId(cliente *aCliente,int len, int id);
int modificarClientePorId(cliente *aCliente,int len, int id);
int bajaClientePorId(cliente *aCliente,int cantidad,int id);
void clienteForzado(cliente *aCliente,int len);

#endif /* CLIENTES_H_ */
